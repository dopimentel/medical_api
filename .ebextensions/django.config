# .ebextensions/django.config
# Settings and commands for the Elastic Beanstalk (Python) environment

option_settings:
    aws:elasticbeanstalk:container:python:
        WSGIPath: core.wsgi:application

packages:
    yum:
        postgresql-devel: []
        gcc: []

container_commands:
    01_migrate:
        command: "python manage.py migrate --noinput"
        leader_only: true

    02_collectstatic:
        command: "python manage.py collectstatic --noinput"
        leader_only: true
